{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "fetches an article by its ID",
    "exampleResponse": {
      "article": {
        "author": "weegembump",
        "title": "Seafood substitutions are increasing",
        "article_id": 1,
        "body": "Text from the article..",
        "topic": "cooking",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "http://example.com/image.jpg"
      }
    }
  },
  "GET /api/articles": {
    "description": "Fetches all articles, sorted by date in descending order. Each article includes the total number of comments but does not include the body field.",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Learning JavaScript",
          "author": "JohnDoe",
          "topic": "Programming",
          "created_at": "2023-04-15T00:00:00Z",
          "votes": 10,
          "article_img_url": "http://example.com/js_image.jpg",
          "comment_count": 5
        }
      ]
    }
  },
    "POST /api/articles/:article_id/comments": {
      "description": "Adds a comment to the specified article_id",
      "requestBody": {
        "username": "string",
        "body": "string"
      },
      "exampleResponse": {
        "comment": {
          "comment_id": 1,
          "article_id": 1,
          "author": "butter_bridge",
          "body": "This is a test comment.",
          "votes": 0,
          "created_at": "2023-04-15T00:00:00Z"
        }
      }
    }
}
